#!/usr/bin/env bash
# Nginx setup script
sudo su
apt-get -y install nginx
mv /etc/nginx/nginx.conf /etc/nginx/nginx.conf.bak
printf "http {a\nserver {\ninclude /etc/nginx/mime.types;\nlisten 80;\nlocation / {\ndefault_type application/html;\nreturn Hello World!\n}\n}\nevents{}" >> /etc/nginx/nginx.conf
nginx -s reload
